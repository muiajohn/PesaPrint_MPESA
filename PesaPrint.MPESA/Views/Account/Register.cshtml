@model PesaPrint.MPESA.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<div class="wrapper">
<div class="block-center mt-xl wd-xl">
<!-- START panel-->
<div class="panel panel-dark panel-flat">
    <div class="panel-heading text-center" style="background-color:darkslategrey">
        <a href="#">
            <img src="img/logo.png" alt="Image" class="block-center img-rounded">
        </a>
    </div>
    <div class="panel-body">
        <p class="text-center pv">CREATE A NEW ACCOUNT</p>
        <form role="form" data-parsley-validate="" novalidate="" class="mb-lg">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group has-feedback">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                <span class="fa fa-user form-control-feedback text-muted"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <span class="fa fa-envelope form-control-feedback text-muted"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <span class="fa fa-lock form-control-feedback text-muted"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label pull-left mt0" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                <span class="fa fa-lock form-control-feedback text-muted"></span>
            </div>
            <div class="clearfix">
                <div class="checkbox c-checkbox pull-left mt0">
                    <label>
                        <input type="checkbox" value="" required name="agreed">
                        I agree with the <a href="#">terms</a>
                    </label>
                </div>
            </div>
            <input type="submit" class="btn btn-block btn-primary mt-lg" value="Register" />
        </form>
        <p class="pt-lg text-center">Have an account ?</p><a href="@Url.Action("Login", "Account")" class="btn btn-block btn-default">Login Now</a>
    </div>
</div>
<!-- END panel-->
</div>
    </div>


































































    
    <hr />

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
