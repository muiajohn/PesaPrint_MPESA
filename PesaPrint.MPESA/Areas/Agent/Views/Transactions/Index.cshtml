@section Styles
{
@Styles.Render("~/Content/kendo/css")
@Styles.Render("~/Content/shared/css")

}

<h2> <i class="fa fa-shopping-cart"></i> Transactions</h2>

@using Kendo.Mvc.UI
﻿﻿@(Html.Kendo().Grid<PesaPrint.MPESA.Models.Transaction>()
      .Name("grid")
      .Columns(columns =>
      {
        columns.Bound(c => c.TransactionCode);
        columns.Bound(c => c.ReceiptNumber);
        columns.Bound(c => c.TransactionTime);
        columns.Bound(c => c.CustomerPhone);
        columns.Bound(c => c.CustomerName);
        columns.Bound(c => c.Amount);
        
      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      }) 
      .Pageable()
      .Filterable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("Transactions_Read", "Transactions"))
      )
)

@section scripts
{
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/demo")
}
