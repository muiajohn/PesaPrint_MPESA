@model IEnumerable<PesaPrint.MPESA.Models.Merchant>

@section Styles
{
    @Styles.Render("~/Content/kendo/css")
    @Styles.Render("~/Content/shared/css")

}

<h2> <i class="fa fa-users"></i> View Merchants</h2>

@using Kendo.Mvc.UI
﻿﻿@(Html.Kendo().Grid<PesaPrint.MPESA.Models.Merchant>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.Name);
          columns.Bound(c => c.Email);

      })
      .ToolBar(toolbar =>
      {
          toolbar.Pdf();
      })
      .Pageable()
      .Filterable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("Shops_Read", "Shops"))
      )
)

@section scripts
{
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/demo")
}
